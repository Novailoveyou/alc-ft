  @@unique([id, sessionToken])
  @@map("sessions")
}

model User {
  /// The unique identifier for the record
  /// @default {Generated by database}
  id String @id @default(cuid())

  locale      Locale   @default(ru)
  isPublished Boolean  @default(true)
  createdAt   DateTime @default(now()) @map(name: "created_at")
  updatedAt   DateTime @default(now()) @updatedAt @map(name: "updated_at")

  /// user name
  /// @zod.trim().min(2).max(100).optional()
  name String?

  /// user personal data usage agreement
  isDataUsageAgreement Boolean @default(false)

  phoneNumber      PhoneNumer @relation(fields: [phoneNumberValue], references: [value])
  phoneNumberValue String     @unique

  email         Email     @relation(fields: [emailValue], references: [value])
  emailValue    String    @unique
  emailVerified DateTime? @map("email_verified")

  image    Image  @relation(fields: [imageSrc], references: [src])
  imageSrc String @unique

  accounts Account[]
  sessions Session[]

  @@unique([id])
  @@map("users")
}

model VerificationToken {
